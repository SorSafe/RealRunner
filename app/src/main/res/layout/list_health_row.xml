<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/healthPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Topic -->
    <TextView
        android:id="@+id/healthTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/healthPic"
        android:layout_toRightOf="@+id/healthPic"
        android:textSize="@dimen/user_name"
        android:textStyle="bold" />

    <!--TextView
        android:id="@+id/healthDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_id"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/healthPic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" /-->

</LinearLayout>