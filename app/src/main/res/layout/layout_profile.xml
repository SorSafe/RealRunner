<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/pic_profile"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/user_default" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_name"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profile">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/edit_name"
            android:src="@drawable/pencil"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/area_id"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_name">

        <TextView
            android:id="@+id/t_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:textColor="#919191" />

        <TextView
            android:id="@+id/u_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:textColor="#919191"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/description"
        android:orientation="horizontal"
        android:layout_below="@+id/area_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Tdis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:textSize="20sp"
            android:text="Cumm Dist."
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dis"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="20sp"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/Udis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:text="km."
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/descript2"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/Tcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:textSize="20sp"
            android:text="Cumm. Cal."
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/cal"
            android:textSize="20sp"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/Ucal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="kcal."
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateArea"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="31dp"
            android:textSize="20sp"
            android:text="Start Date"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/date"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "2015-11-17"
            android:gravity="center"
            android:textAlignment="gravity" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/descript2"
        android:layout_gravity="center_horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/add_friend"
            android:src="@drawable/add_friend" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:id="@+id/map"
            android:src="@drawable/startmap" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:id="@+id/calculate"
            android:src="@drawable/calculate" />


    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#ffdf6e"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15dp" />
</LinearLayout>