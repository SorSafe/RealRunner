<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/map"
    tools:context=".MainActivity"
    android:background="@drawable/map2"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/area0"
        android:layout_below="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#78f7feff"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/area1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Distance"
                android:textColor="#080808" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/distance_value"
                android:text="0.00 km"
                android:layout_marginRight="15dp"
                android:textColor="#080808" />

            <TextView
                android:id="@+id/step_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Step"
                android:textColor="#080808" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/step_value"
                android:text="0"
                android:textColor="#080808" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/area2"
            android:layout_below="@+id/area1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Calories"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:id="@+id/calories"
                android:textColor="#080808" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0 kcal"
                android:layout_marginLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/calories_value"
                android:textColor="#080808" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Time"
                android:textColor="#080808" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/ElapsedTime"
                android:textColor="#080808" />
        </LinearLayout>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtStatus"
            android:textColor="#080808"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area4"
        android:layout_below="@+id/area2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_start"
            android:layout_marginRight="10dp"
            android:src="@drawable/start" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_pause"
            android:layout_marginRight="10dp"
            android:src="@drawable/pause"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_stop"
            android:src="@drawable/stop"
            />

    </LinearLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pace_value"
        android:textColor="#080808"
        android:visibility="gone"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/speed_value"
        android:textColor="#080808"
        android:visibility="gone"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/desired_pace_value"
        android:textColor="#080808"
        android:visibility="gone"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/distance_units"
        android:textColor="#080808"
        android:visibility="gone"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/speed_units"
        android:textColor="#080808"
        android:visibility="gone"/>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/usermap"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user_default"
        android:layout_below="@+id/area4"
        />
    <!--android:layout_marginLeft="181dp"
        android:layout_marginTop="240dp"-->


</LinearLayout>




