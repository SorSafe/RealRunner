<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#fff0bb">


    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:id="@+id/box1"
        android:src="@drawable/bg" />

    <ImageButton
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Overall Global"
        android:src="@drawable/overallglobal"
        android:id="@+id/overall"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp" />

    <ImageButton
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/overall"
        android:src="@drawable/overallfriend"
        android:id="@+id/overallFriend"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:id="@+id/box2"
        android:src="@drawable/bg"
        android:layout_below="@+id/box1" />

    <ImageButton
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Weekly Global"
        android:src="@drawable/weekly"
        android:id="@+id/weekly"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/overallFriend"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Weekly friends"
        android:src="@drawable/weekfriend"
        android:id="@+id/weeklyFriend"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/weekly"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>

