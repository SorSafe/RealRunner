<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Time Start :"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/distance"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/time_start"
        android:layout_width="100dp"
        android:text="start2035"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@+id/Stop"
        android:layout_toEndOf="@+id/Stop" />

    <TextView
        android:id="@+id/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Time Stop :"
        android:layout_alignTop="@+id/distance"
        android:layout_alignEnd="@+id/Start" />

    <TextView
        android:id="@+id/time_stop"
        android:text="stop3069"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/Stop"
        android:layout_toEndOf="@+id/Stop" />

    <!-- Rating -->
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Start"
        android:layout_marginTop="1dip"
        android:textSize="12dp"
        android:layout_toStartOf="@+id/addfriend" />

    <TextView
        android:id="@+id/user_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="km."
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Stop"
        android:layout_marginTop="63dp" />


    <!-- Rating -->
    <TextView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_below="@+id/time_start"
        android:layout_toStartOf="@+id/user_cal" />

    <TextView
        android:id="@+id/user_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="cal."
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/Stop"
        android:layout_toStartOf="@+id/Stop" />

    <TextView
        android:id="@+id/timeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Time Total :"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/time_stop"
        android:layout_marginTop="47dp" />

    <TextView
        android:id="@+id/time_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_stop"
        android:layout_toRightOf="@+id/timeTotal"
        android:textSize="12dp"
        android:layout_alignParentEnd="true" />


    <!-- Rating -->
    <TextView
        android:id="@+id/stepVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_alignTop="@+id/distance"
        android:layout_toEndOf="@+id/user_cal" />

    <TextView
        android:id="@+id/step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="step"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/time_stop"
        android:layout_marginTop="103dp" />


</RelativeLayout>