<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.acerth.realrunner.Login">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/reg"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="login"
        android:background="#48b1ff"
        android:textColor="#f8fcff" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:id="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area1"
        android:layout_below="@+id/signin"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username :"
            android:id="@+id/tUser" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameLog"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area2"
        android:layout_below="@+id/area1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password :"
            android:id="@+id/tPass" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passLog"
            android:layout_below="@+id/area1"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/bLogin"
        android:text="login"
        android:layout_below="@+id/area2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#f8fcff"
        android:background="#48b1ff" />


    <!--<ImageView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/forgot"
        android:src="@drawable/forgotpassword"
        android:layout_below="@+id/bLogin"
        android:layout_alignStart="@+id/bLogin"
        android:layout_marginTop="59dp" /-->

</RelativeLayout>
